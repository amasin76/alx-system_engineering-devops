{
    "name": "Alx-u16",
    "image": "holbertonschool/ubuntu-1604-python35_fabric_puppet",
    "runArgs": [
        "--ulimit",
        "nofile=1024:1024"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "PKief.material-icon-theme",
                "ms-python.black-formatter"
            ],
            "settings": {
                "workbench.colorTheme": "Default Dark Modern",
                "workbench.iconTheme": "material-icon-theme",
                "editor.insertSpaces": false,
                "editor.formatOnSave": true,
                "git.autofetch": true,
                "files.insertFinalNewline": true,
                "terminal.integrated.defaultProfile.linux": "zsh",
                "extensions.ignoreRecommendations": true
            }
        }
    },
    "postCreateCommand": "echo alias w1=\\'ssh ubuntu@52.87.232.85 -i ~/.ssh/school\\' >> ~/.zshrc"
    // control resources
    // "hostRequirements": {
    //     "cpus": 8,
    //     "memory": "1gb",
    //     "storage": "4gb"
    // }
}
